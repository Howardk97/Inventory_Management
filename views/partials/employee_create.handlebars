<!-- Instructions -->
<h3 class="container">Please enter data for new employee:</h3>

<!-- First Name -->
<div class="row container">
	<div class="input-field col s6">
		<input
			placeholder="Enter employee's first name"
			id="first_name"
			type="text"
			class="validate"
		/>
		<label class="active" for="first_name">First Name</label>
	</div>
</div>

<!-- Last Name -->
<div class="row container">
	<div class="input-field col s6">
		<input
			placeholder="Enter employee's last name"
			id="last_name"
			type="text"
			class="validate"
		/>
		<label class="active" for="last_name">Last Name</label>
	</div>
</div>

<!-- Submit Button -->
<div class="row container">
	<button class="waves-effect waves-light btn center-align">Submit</button>
</div>